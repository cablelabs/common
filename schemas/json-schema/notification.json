{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "notification",
  "id": "notification",
  "properties": {
    "id": {
      "type": "string",
      "description": "A unique ID for the notification"
    },
    "link": {
      "$ref": "link",
      "description": "A self referencing link to the notification."
    },
    "regarding": {
      "type": "link",
      "description": "A link to the URL resource affected."
    },
    "type": {
      "type": "string",
      "description": "Type of notification",
      "enum": [
        "CREATED",
        "UPDATED",
        "DELETED",
        "ARCHIVED",
        "OTHER"
      ],
    },
    "message": {
      "type": "string",
      "description": "Notification message."
    }
  }
}
